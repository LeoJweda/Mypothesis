= render :layout => 'shared/panel', :locals => {:title => 'Forgot your password?', :buttons => render(:partial => 'devise/shared/links')} do
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
    = devise_error_messages!
    
    %div
      = f.label :email
      %br/
      = f.email_field :email, :class => "text ui-widget-content ui-corner-all"
      
    %div= f.submit "Send me reset password instructions"