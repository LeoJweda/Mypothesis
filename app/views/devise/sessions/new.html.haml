= render :layout => 'shared/panel', :locals => {:title => 'Sign in', :buttons => render(:partial => 'devise/shared/links')} do
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %div
      = f.label :email
      %br/
      = f.email_field :email, :class => "text ui-widget-content ui-corner-all"
      
    %div
      = f.label :password
      %br/
      = f.password_field :password, :class => "text ui-widget-content ui-corner-all"
      
    - if devise_mapping.rememberable?
      %div
        = f.check_box :remember_me
        = f.label :remember_me
        
    %div= f.submit "Sign in"