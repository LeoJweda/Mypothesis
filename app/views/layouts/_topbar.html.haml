%div.navbar.navbar-fixed-top
  %div.navbar-inner
    %div.container-fluid
      %a.btn.btn-navbar{:data => {:toggle => 'collapse', :target => '.nav-collapse'}}
        %span.i-bar
        %span.i-bar
        %span.i-bar
      = link_to 'Mypothesis', root_path, :class => 'brand'
      
      %div.nav-collapse
        %ul.nav
          %li
            = link_to "Home", root_path
          
      %form.navbar-search.pull-left{:action => ''}
        %input.search-query.span2{:type => 'text', :placeholder => 'Search'}
      
      %ul.nav.secondary-nav.pull-right
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{:data => {:toggle => 'dropdown'}}
              = current_user.full_name
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to "View profile", current_user
              %li
                = link_to "Edit profile", edit_user_registration_path, :method => :get
              %li.divider
              %li
                = link_to "Log out", destroy_user_session_path, :method => :delete
        - else
          %li= link_to "Sign in", new_user_session_path, :class => "navButton"
          %li= link_to "Sign up", new_user_registration_path, :class => "navButton"