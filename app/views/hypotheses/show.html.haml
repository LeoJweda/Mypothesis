= render :layout => 'shared/panel', :locals => {:title => @hypothesis.title,
  :buttons => render(:partial => 'hypotheses/shared/buttons', :locals => {:hypothesis => @hypothesis}),
  :outside => @hypothesis.evidences.empty? ? render(:partial => 'evidences/new', :locals => {:hypothesis => @hypothesis}) : render(@hypothesis.evidences) + render(:partial => 'evidences/new', :locals => {:hypothesis => @hypothesis})} do
  %p#notice= notice
  
  %p
    = @hypothesis.content
  %p
    %b Null hypothesis:
    = @hypothesis.null_hypothesis
  %p
    %b Subject:
    = @hypothesis.subject
  %p
    %b References:
    = @hypothesis.references
    
  = @hypothesis.score
        
- content_for :sidebar do
  = render :layout => 'shared/panel', :locals => {:title => @hypothesis.user.name} do
    = gravatar_for @hypothesis.user