= render :layout => 'shared/panel', :locals => {:title => @hypothesis.title, :buttons => render(:partial => 'hypotheses/shared/buttons', :locals => {:hypothesis => @hypothesis}), :outside => render(@hypothesis.evidences) + render(:partial => 'evidences/new', :locals => {:hypothesis => @hypothesis})} do
  %p#notice= notice
  
  %p
    = @hypothesis.content
  %p
    %b Null hypothesis:
    = @hypothesis.null_hypothesis
  %p
    %b Subject:
    = @hypothesis.subject
    
- content_for :sidebar do
  = render :layout => 'shared/panel', :locals => {:title => @hypothesis.user.name, :buttons => ""} do
    = gravatar_for @hypothesis.user