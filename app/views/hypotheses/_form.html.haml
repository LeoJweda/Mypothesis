= form_for @hypothesis, :class => 'form-horizontal' do |f|
  -if @hypothesis.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hypothesis.errors.count, "error")} prohibited this hypothesis from being saved:"
      %ul
        - @hypothesis.errors.full_messages.each do |msg|
          %li= msg
          
  .fieldset
    .control-group
      = f.label :title, :class => 'control-label'
      .controls
        = f.text_field :title, :class => 'span6'
    .control-group
      = f.label :content, :class => 'control-label'
      .controls
        = f.text_area :content, :class => 'span6'
    .control-group
      = f.label :null_hypothesis, :class => 'control-label'
      .controls
        = f.text_area :null_hypothesis, :class => 'span6'
    .control-group
      = f.label :subject, :class => 'control-label'
      .controls
        = render :partial => 'shared/subject', :locals => {:object => 'hypothesis', :allItem => false}
    .control-group
      = f.label :references, :class => 'control-label'
      .controls
        = f.text_area :references, :class => 'span6'
    .form-actions
      = f.submit 'Save'